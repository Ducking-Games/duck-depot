// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_DB_URL")
}

model Game {
  id                  Int       @id @default(autoincrement())
  itchId              Int       @unique
  title               String
  localCoverUrl       String
  classification      String
  shortText           String
  user                User      @relation(fields: [userId], references: [id])
  userId              Int
}

model User {
  id          Int       @id @default(autoincrement())
  url         String
  displayName String
  username    String    @unique
  itchId      Int       @unique
  coverUrl    String
  games Game[]
}

model DigitalAsset {
    id            Int      @id @default(autoincrement())
    createdAt     DateTime @default(now())
    updatedAt     DateTime @updatedAt
    type          AssetType
    name          String
    tags          String[] // Assuming tags are simple strings, you can change this based on your tagging strategy
    metadata      Json     // Flexible JSON field for storing various metadata
    filePath      String   // Path to the stored file
    thumbnailPath String?  // Optional path to a thumbnail image, if applicable

    // Relationships (if needed)
    // e.g., linking assets to specific projects or users
    // projectId     Int?
    // project       Project? @relation(fields: [projectId], references: [id])
}

enum AssetType {
    IMAGE
    GIF
    SOUND
    VIDEO
}